<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :contact_number %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :commune %>
    <%= f.input :city %>
    <%= f.input :employee_count %>
    <%= f.input :website %>
    <%= f.input :photo %>
    <%= f.input :description %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :gmaps %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
