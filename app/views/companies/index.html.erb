<%= gmaps4rails(@json) %>

<section id='professional' >
<% @companies.each do |company| %>
<div class="well well small">
      <article class='row-fluid'>
          <div class="pro_thumb span2 ">
            
            <%= image_tag company.photo.url(:thumb) %>


           </div>
           <div class="pro_thumb span4 ">
             <h3><%= link_to company.name, company %></h3>
             <p><%= company.description %></p>
             <p><%= company.address %></p>


     <td><%= link_to 'Show', company, class: "btn btn-default" %></td>
    <td><%= link_to 'Edit', edit_company_path(company), class: "btn btn-default" %></td>
    <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
       </div>
        </article>   
         </div> 
</section>

<% end %>


<%= link_to 'New Company', new_company_path, class: "btn btn-info"  %>
