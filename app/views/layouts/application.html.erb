<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Emplefono" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Emplefono" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
    <%= yield :scripts %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= link_to "Emplefono", root_path, :class => 'brand' %>
          <a class="brand" href="http://localhost:3000"> <img src=""></a>
          <ul class="nav">
              <li class="divider-vertical"></li>
              <li><%= link_to "Empresas", "/companies" %></li>
              <li class="divider-vertical"></li>
           </ul>
           <ul class="nav pull-right">
            <%= render 'layouts/navigation' %>

        </ul>

        </div>
      </nav>
    </div>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <%= yield %>
              <%= render 'layouts/footer' %>
            
            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>
